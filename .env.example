# Common environment variables for yt-seo-tool
# Copy to .env and adjust as needed

DB_PATH=data/ytseo.sqlite
YOUTUBE_CLIENT_SECRET_PATH=config/client_secret.json
AI_EWG_DB_PATH=../ai-ewg/data/pipeline.db
AI_EWG_HTTP_URL=http://localhost:8000
DEFAULT_CHANNEL_HANDLE=@TheNewsForum
STREAMLIT_PORT=8502

# Safety Controls - CRITICAL: Keep these enabled for production
DRY_RUN=true
REQUIRE_CONFIRMATION=true
MERGE_TAGS=true

# Optional: Google API scopes and project config (fill when enabling real APIs)
GOOGLE_API_SCOPES=https://www.googleapis.com/auth/youtube,https://www.googleapis.com/auth/youtube.force-ssl
GOOGLE_CLOUD_PROJECT=tnf-youtubeseo

# LLM Configuration (Phase 8) - Uses AI-EWG's Ollama setup
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
MODEL_NAME=llama3.1
# Fallback options
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
